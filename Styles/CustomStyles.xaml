<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Minimalist Theme -->

    <!-- Core Colors -->
    <Color x:Key="BgBase">#FAFAFA</Color>
    <Color x:Key="BgPanel">#FFFFFF</Color>
    <Color x:Key="BgPanelAlt">#F5F5F5</Color>

    <!-- Modern accent colors -->
    <Color x:Key="NeonCyan">#2196F3</Color>
    <Color x:Key="NeonMagenta">#9C27B0</Color>
    <Color x:Key="NeonYellow">#FFC107</Color>
    <Color x:Key="NeonGreen">#4CAF50</Color>

    <Color x:Key="LinkBlue">#2196F3</Color>
    <Color x:Key="VisitedPurple">#9C27B0</Color>

    <Color x:Key="LightText">#212121</Color>
    <Color x:Key="MutedText">#757575</Color>
    <Color x:Key="ErrorRed">#F44336</Color>

    <!-- Brand colors -->
    <Color x:Key="LondonDrugsRed">#D32F2F</Color>
    <Color x:Key="FujitsuBlue">#1976D2</Color>
    <Color x:Key="DarkBackground">#FAFAFA</Color>
    <Color x:Key="DarkerBackground">#F5F5F5</Color>
    <Color x:Key="GlassBackground">#FFFFFF</Color>
    <Color x:Key="GlassBorder">#E0E0E0</Color>
    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="WarningOrange">#FF9800</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgBaseBrush" Color="{StaticResource BgBase}"/>
    <SolidColorBrush x:Key="BgPanelBrush" Color="{StaticResource BgPanel}"/>
    <SolidColorBrush x:Key="BgPanelAltBrush" Color="{StaticResource BgPanelAlt}"/>

    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyan}"/>
    <SolidColorBrush x:Key="NeonMagentaBrush" Color="{StaticResource NeonMagenta}"/>
    <SolidColorBrush x:Key="NeonYellowBrush" Color="{StaticResource NeonYellow}"/>
    <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource NeonGreen}"/>

    <SolidColorBrush x:Key="LinkBlueBrush" Color="{StaticResource LinkBlue}"/>
    <SolidColorBrush x:Key="VisitedPurpleBrush" Color="{StaticResource VisitedPurple}"/>

    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightText}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedText}"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrange}"/>

    <!-- Legacy alias brushes (keys used by existing XAML) -->
    <SolidColorBrush x:Key="LondonDrugsRedBrush" Color="{StaticResource LondonDrugsRed}"/>
    <SolidColorBrush x:Key="FujitsuBlueBrush" Color="{StaticResource FujitsuBlue}"/>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
    <SolidColorBrush x:Key="DarkerBackgroundBrush" Color="{StaticResource DarkerBackground}"/>
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="{StaticResource GlassBackground}"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="{StaticResource GlassBorder}"/>

    <!-- Clean background (no texture) -->
    <SolidColorBrush x:Key="ScanlineBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="VignetteBrush" Color="Transparent"/>

    <!-- Modern Header Gradient (subtle blue) -->
    <LinearGradientBrush x:Key="RetroHeaderBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1976D2" Offset="0"/>
        <GradientStop Color="#1565C0" Offset="1"/>
    </LinearGradientBrush>

    <!-- Typography helpers -->
    <Style x:Key="HeaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="SubheaderText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="Margin" Value="0,4,0,4"/>
    </Style>

    <!-- Modern Card -->
    <Style x:Key="CustomCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgPanelBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#20000000" Opacity="0.15" Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Link Button -->
    <Style x:Key="LinkButton" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource LinkBlueBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline"
                               Foreground="{TemplateBinding Foreground}"
                               TextAlignment="Center">
                        <ContentPresenter/>
                    </TextBlock>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource FujitsuBlueBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Primary Button -->
    <Style x:Key="ModernButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="24,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            CornerRadius="6"
                            Background="{TemplateBinding Background}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.2" Direction="270"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Opacity" Value="0.9"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Outlined Button -->
    <Style x:Key="OutlinedButton" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="{StaticResource GlassBorderBrush}"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern TextBox -->
    <Style x:Key="GlassTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Name="border"
                            CornerRadius="6"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <ScrollViewer Margin="0"
                                          x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Padding="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#757575"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#1976D2"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- Modern CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <!-- Modern ProgressBar -->
    <Style TargetType="ProgressBar">
        <Setter Property="Height" Value="4"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="{StaticResource FujitsuBlueBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ScrollViewer defaults -->
    <Style TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <!-- Modern Expander -->
    <Style TargetType="Expander">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Modern ToggleSwitch -->
    <Style x:Key="ToggleSwitch" TargetType="ToggleButton">
        <Setter Property="Width" Value="52"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#BDBDBD"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Track" CornerRadius="14" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="#20000000" Opacity="0.15" Direction="270"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="Thumb" Width="24" Height="24" CornerRadius="12" Background="White" Margin="2" HorizontalAlignment="Left">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="#40000000" Opacity="0.25" Direction="270"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{StaticResource FujitsuBlueBrush}"/>
                            <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Track" Property="Opacity" Value="0.9"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
