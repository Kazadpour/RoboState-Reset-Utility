<Application x:Class="RoboStateResetUtility.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RoboStateResetUtility.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Modern, clean typography - using Segoe UI (default Windows font) -->
            <FontFamily x:Key="ModernFont">Segoe UI</FontFamily>

            <!-- Apply modern font across text and controls -->
            <Style TargetType="{x:Type TextElement}">
                <Setter Property="TextElement.FontFamily" Value="{StaticResource ModernFont}"/>
            </Style>
            <Style TargetType="{x:Type Control}">
                <Setter Property="Control.FontFamily" Value="{StaticResource ModernFont}"/>
            </Style>

            <!-- Converters -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <!-- Custom Styles -->
                <ResourceDictionary Source="Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
