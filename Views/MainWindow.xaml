<Window x:Class="RoboStateResetUtility.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:RoboStateResetUtility.ViewModels"
        mc:Ignorable="d"
        Title="VPOS State Reset Utility"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{StaticResource LightTextBrush}"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0A0F" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#0A0A0F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CustomCard}" Background="{StaticResource LondonDrugsRedBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="VPOS State Reset Utility"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="London Drugs × Fujitsu Self-Checkout Management"
                               FontSize="14"
                               Foreground="#E0E0E0"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                          Text="🏪💵"
                          FontSize="32"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Style="{StaticResource CustomCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Scan Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Store Number:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontWeight="SemiBold"/>
                    <TextBox Text="{Binding StoreNumber, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Padding="8,0"
                             FontSize="14"
                             Style="{StaticResource GlassTextBox}"/>

                    <Button Command="{Binding ScanNetworkCommand}"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Padding="24,0"
                            Margin="12,0,0,0"
                            Background="{StaticResource FujitsuBlueBrush}">
                        <TextBlock Text="🔍 Search Store" VerticalAlignment="Center"/>
                    </Button>

                    <Button Command="{Binding SelectAllCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <TextBlock Text="☑ Select All" VerticalAlignment="Center"/>
                    </Button>

                    <Button Command="{Binding DeselectAllCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <TextBlock Text="☐ Deselect All" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <!-- Reset Value Control -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Reset Value:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontWeight="SemiBold"/>
                    <ToggleButton IsChecked="{Binding ResetValueEnabled}"
                                  Style="{StaticResource ToggleSwitch}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>

                    <Button Command="{Binding ResetSelectedCommand}"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Padding="24,0"
                            Margin="16,0,0,0"
                            Background="{StaticResource SuccessGreenBrush}">
                        <TextBlock Text="✓ Reset Selected" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Button>

                    <Button Command="{Binding OpenLogFileCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <TextBlock Text="📄" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Stores and Checkouts List -->
            <Border Grid.Column="0" Style="{StaticResource CustomCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Stores &amp; Self-Checkouts"
                                   Style="{StaticResource SubheaderText}"
                                   VerticalAlignment="Center"/>
                        <Button Command="{Binding ExpandAllCommand}"
                                Style="{StaticResource OutlinedButton}"
                                ToolTip="Expand All"
                                Padding="4"
                                Margin="8,0,0,0">
                            <TextBlock Text="⇊"/>
                        </Button>
                        <Button Command="{Binding CollapseAllCommand}"
                                Style="{StaticResource OutlinedButton}"
                                ToolTip="Collapse All"
                                Padding="4"
                                Margin="4,0,0,0">
                            <TextBlock Text="⇈"/>
                        </Button>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Stores}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#404040"
                                            BorderThickness="0,0,0,1"
                                            Padding="8"
                                            Margin="0,4">
                                        <Expander IsExpanded="{Binding IsExpanded}"
                                                  Background="Transparent">
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <TextBlock Text="🏪"
                                                                   FontSize="20"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="2"
                                                            Background="{StaticResource FujitsuBlueBrush}"
                                                            CornerRadius="10"
                                                            Padding="8,2"
                                                            Margin="8,0">
                                                        <TextBlock Text="{Binding AccessibleCheckoutsCount}"
                                                                   Foreground="White"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                            </Expander.Header>

                                            <ItemsControl ItemsSource="{Binding SelfCheckouts}" Margin="32,8,0,8">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#303030"
                                                                BorderThickness="0,0,0,1"
                                                                Padding="8,4"
                                                                Margin="0,2"
                                                                Visibility="{Binding IsAccessible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <CheckBox Grid.Column="0"
                                                                          IsChecked="{Binding IsSelected}"
                                                                          IsEnabled="{Binding IsAccessible}"
                                                                          VerticalAlignment="Center"
                                                                          Margin="0,0,12,0"/>

                                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                    <TextBlock Text="💵"
                                                                               FontSize="16"
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding DisplayName}"
                                                                               VerticalAlignment="Center"
                                                                               FontSize="14"/>
                                                                </StackPanel>

                                                                <TextBlock Grid.Column="2"
                                                                           Text="{Binding Status}">
                                                                    <TextBlock.Foreground>
                                                                        <SolidColorBrush Color="{Binding StatusColor}"/>
                                                                    </TextBlock.Foreground>
                                                                </TextBlock>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Column="2" Style="{StaticResource CustomCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ℹ️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Activity Log" Style="{StaticResource SubheaderText}"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="#1A1A1A"
                                  Padding="8">
                        <ItemsControl ItemsSource="{Binding LogMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Foreground="#B0B0B0"
                                               TextWrapping="Wrap"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Style="{StaticResource CustomCard}" Background="{StaticResource DarkerBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ℹ️"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Foreground="{StaticResource FujitsuBlueBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>

                <ProgressBar Grid.Column="1"
                             Value="{Binding ProgressValue}"
                             Maximum="{Binding ProgressMaximum}"
                             Width="200"
                             Height="4"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource SuccessGreenBrush}"/>

                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource FujitsuBlueBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
