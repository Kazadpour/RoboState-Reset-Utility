<Window x:Class="RoboStateResetUtility.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:RoboStateResetUtility.ViewModels"
        mc:Ignorable="d"
        Title="VPOS State Reset Utility"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{StaticResource LightTextBrush}">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Background>
        <StaticResource ResourceKey="BgBaseBrush"/>
    </Window.Background>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource RetroHeaderBrush}" Padding="32,24" Margin="0" CornerRadius="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.15" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="VPOS State Reset Utility"
                               FontSize="32"
                               FontWeight="Light"
                               Foreground="White"/>
                    <TextBlock Text="London Drugs x Fujitsu Self-Checkout Management"
                               FontSize="14"
                               FontWeight="Normal"
                               Foreground="#E3F2FD"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="White" Padding="24,20" Margin="24,16,24,8" CornerRadius="12" BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#20000000" Opacity="0.12" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Scan Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Store Number"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{StaticResource MutedTextBrush}"/>
                    <TextBox Text="{Binding StoreNumber, UpdateSourceTrigger=PropertyChanged}"
                             Width="100"
                             Height="40"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Style="{StaticResource GlassTextBox}"/>

                    <Button Command="{Binding ScanNetworkCommand}"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Margin="16,0,0,0"
                            Background="{StaticResource FujitsuBlueBrush}">
                        <TextBlock Text="Search Store" VerticalAlignment="Center" FontSize="14"/>
                    </Button>

                    <Button Command="{Binding SelectAllCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Margin="12,0,0,0">
                        <TextBlock Text="Select All" VerticalAlignment="Center" FontSize="14"/>
                    </Button>

                    <Button Command="{Binding DeselectAllCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Margin="8,0,0,0">
                        <TextBlock Text="Deselect All" VerticalAlignment="Center" FontSize="14"/>
                    </Button>
                </StackPanel>

                <!-- Reset Value Control -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Reset Value"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{StaticResource MutedTextBrush}"/>
                    <ToggleButton IsChecked="{Binding ResetValueEnabled}"
                                  Style="{StaticResource ToggleSwitch}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,16,0"/>

                    <Button Command="{Binding ResetSelectedCommand}"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Margin="8,0,0,0"
                            Background="{StaticResource SuccessGreenBrush}">
                        <TextBlock Text="Reset Selected" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                    </Button>

                    <Button Command="{Binding OpenLogFileCommand}"
                            Style="{StaticResource OutlinedButton}"
                            Height="40"
                            Margin="8,0,0,0">
                        <TextBlock Text="Open Log" VerticalAlignment="Center" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="24,0,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Stores and Checkouts List -->
            <Border Grid.Column="0" Background="White" Padding="24" CornerRadius="12" BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#20000000" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Stores &amp; Self-Checkouts"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Command="{Binding ExpandAllCommand}"
                                Style="{StaticResource OutlinedButton}"
                                ToolTip="Expand All"
                                Height="32"
                                Padding="12,6"
                                Margin="16,0,0,0">
                            <TextBlock Text="Expand" FontSize="13"/>
                        </Button>
                        <Button Command="{Binding CollapseAllCommand}"
                                Style="{StaticResource OutlinedButton}"
                                ToolTip="Collapse All"
                                Height="32"
                                Padding="12,6"
                                Margin="8,0,0,0">
                            <TextBlock Text="Collapse" FontSize="13"/>
                        </Button>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Stores}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0"
                                            BorderThickness="0,0,0,1"
                                            Padding="12,8"
                                            Margin="0,8,0,0">
                                        <Expander IsExpanded="{Binding IsExpanded}"
                                                  Background="Transparent">
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <TextBlock Text="Store "
                                                                   FontSize="16"
                                                                   FontWeight="Medium"
                                                                   Foreground="{StaticResource MutedTextBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{StaticResource LightTextBrush}"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="2"
                                                            Background="{StaticResource FujitsuBlueBrush}"
                                                            CornerRadius="12"
                                                            Padding="10,4"
                                                            Margin="12,0">
                                                        <TextBlock Text="{Binding AccessibleCheckoutsCount}"
                                                                   Foreground="White"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </Grid>
                                            </Expander.Header>

                                            <ItemsControl ItemsSource="{Binding SelfCheckouts}" Margin="40,12,0,8">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#F0F0F0"
                                                                BorderThickness="0,0,0,1"
                                                                Padding="12,8"
                                                                Margin="0,4"
                                                                Visibility="{Binding IsAccessible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <CheckBox Grid.Column="0"
                                                                          IsChecked="{Binding IsSelected}"
                                                                          IsEnabled="{Binding IsAccessible}"
                                                                          VerticalAlignment="Center"
                                                                          Margin="0,0,12,0"/>

                                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                    <TextBlock Text="SCO "
                                                                               FontSize="14"
                                                                               FontWeight="Normal"
                                                                               Foreground="{StaticResource MutedTextBrush}"
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,4,0"/>
                                                                    <TextBlock Text="{Binding DisplayName}"
                                                                               VerticalAlignment="Center"
                                                                               FontSize="14"
                                                                               FontWeight="Medium"
                                                                               Foreground="{StaticResource LightTextBrush}"/>
                                                                </StackPanel>

                                                                <TextBlock Grid.Column="2"
                                                                           Text="{Binding Status}"
                                                                           FontSize="13"
                                                                           FontWeight="Medium">
                                                                    <TextBlock.Foreground>
                                                                        <SolidColorBrush Color="{Binding StatusColor}"/>
                                                                    </TextBlock.Foreground>
                                                                </TextBlock>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Column="2" Background="White" Padding="24" CornerRadius="12" BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#20000000" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Activity Log"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextBrush}"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="#FAFAFA"
                                  Padding="12">
                        <ItemsControl ItemsSource="{Binding LogMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               Foreground="{StaticResource MutedTextBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="White" Padding="24,16" Margin="24,8,24,16" CornerRadius="12" BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#20000000" Opacity="0.12" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{StaticResource LightTextBrush}"/>
                </StackPanel>

                <ProgressBar Grid.Column="1"
                             Value="{Binding ProgressValue}"
                             Maximum="{Binding ProgressMaximum}"
                             Width="240"
                             Height="6"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource SuccessGreenBrush}"/>

                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             Width="240"
                             Height="6"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource FujitsuBlueBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
