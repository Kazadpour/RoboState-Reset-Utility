<Window x:Class="RoboStateResetUtility.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:RoboStateResetUtility.ViewModels"
        mc:Ignorable="d"
        Title="VPOS State Reset Utility"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource DarkBackgroundBrush}"
        TextElement.Foreground="{StaticResource LightTextBrush}"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CustomCard}" Background="{StaticResource LondonDrugsRedBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="VPOS State Reset Utility"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="London Drugs Ã— Fujitsu Self-Checkout Management"
                               FontSize="14"
                               Foreground="#E0E0E0"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Store"
                                           Width="32"
                                           Height="32"
                                           Foreground="White"
                                           Margin="0,0,16,0"/>
                    <materialDesign:PackIcon Kind="Cash"
                                           Width="32"
                                           Height="32"
                                           Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Style="{StaticResource CustomCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Scan Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <Button Command="{Binding ScanNetworkCommand}"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Height="40"
                            Padding="24,0"
                            Background="{StaticResource FujitsuBlueBrush}"
                            BorderBrush="{StaticResource FujitsuBlueBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Scan Network" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectAllCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckAll"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Select All" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DeselectAllCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckboxBlankOutline"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Deselect All" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Reset Value Control -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Reset Value:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontWeight="SemiBold"/>
                    <ComboBox SelectedValue="{Binding NewResetValue}"
                              Width="80"
                              materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBox.Items>
                            <ComboBoxItem Content="0">0</ComboBoxItem>
                            <ComboBoxItem Content="1">1</ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>

                    <Button Command="{Binding ResetSelectedCommand}"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Height="40"
                            Padding="24,0"
                            Margin="16,0,0,0"
                            Background="{StaticResource SuccessGreenBrush}"
                            BorderBrush="{StaticResource SuccessGreenBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Send"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Reset Selected" VerticalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding OpenLogFileCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Height="40"
                            Padding="16,0"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="FileDocument" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Stores and Checkouts List -->
            <Border Grid.Column="0" Style="{StaticResource CustomCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Stores &amp; Self-Checkouts"
                                   Style="{StaticResource SubheaderText}"
                                   VerticalAlignment="Center"/>
                        <Button Command="{Binding ExpandAllCommand}"
                                Style="{StaticResource MaterialDesignToolButton}"
                                ToolTip="Expand All"
                                Margin="8,0,0,0">
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal"/>
                        </Button>
                        <Button Command="{Binding CollapseAllCommand}"
                                Style="{StaticResource MaterialDesignToolButton}"
                                ToolTip="Collapse All">
                            <materialDesign:PackIcon Kind="UnfoldLessHorizontal"/>
                        </Button>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Stores}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#404040"
                                            BorderThickness="0,0,0,1"
                                            Padding="8"
                                            Margin="0,4">
                                        <Expander IsExpanded="{Binding IsExpanded}"
                                                  Background="Transparent">
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,12,0"/>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Store"
                                                                               Width="24"
                                                                               Height="24"
                                                                               Foreground="{StaticResource LondonDrugsRedBrush}"
                                                                               VerticalAlignment="Center"
                                                                               Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                        <materialDesign:Chip Content="{Binding AccessibleCheckoutsCount}"
                                                                           Background="{StaticResource FujitsuBlueBrush}"
                                                                           Foreground="White"
                                                                           FontSize="12"
                                                                           Margin="8,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Expander.Header>

                                            <ItemsControl ItemsSource="{Binding SelfCheckouts}" Margin="32,8,0,8">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#303030"
                                                                BorderThickness="0,0,0,1"
                                                                Padding="8,4"
                                                                Margin="0,2">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <CheckBox Grid.Column="0"
                                                                          IsChecked="{Binding IsSelected}"
                                                                          IsEnabled="{Binding IsAccessible}"
                                                                          VerticalAlignment="Center"
                                                                          Margin="0,0,12,0"/>

                                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Cash"
                                                                                           Width="20"
                                                                                           Height="20"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding DisplayName}"
                                                                               VerticalAlignment="Center"
                                                                               FontSize="14"/>
                                                                </StackPanel>

                                                                <TextBlock Grid.Column="2"
                                                                           Text="{Binding Status}"
                                                                           Foreground="{Binding StatusColor}"
                                                                           FontSize="12"
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Column="2" Style="{StaticResource CustomCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="InformationOutline"
                                               Width="20"
                                               Height="20"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Activity Log" Style="{StaticResource SubheaderText}"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="#1A1A1A"
                                  Padding="8">
                        <ItemsControl ItemsSource="{Binding LogMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               Foreground="#B0B0B0"
                                               TextWrapping="Wrap"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Style="{StaticResource CustomCard}" Background="{StaticResource DarkerBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Foreground="{StaticResource FujitsuBlueBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>

                <ProgressBar Grid.Column="1"
                             Value="{Binding ProgressValue}"
                             Maximum="{Binding ProgressMaximum}"
                             Width="200"
                             Height="4"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource SuccessGreenBrush}"/>

                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{StaticResource FujitsuBlueBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
